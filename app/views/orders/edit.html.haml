%h1 Editing order

- form_for(@order) do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :address
    %br
    = f.text_area :address
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :pay_type
    %br
    = f.text_field :pay_type
  %p
    = f.submit 'Update'

= link_to 'Show', @order
= " | "
= link_to 'Back', orders_path