<% title "Product" %>

<p>
  <strong>Title:</strong>
  <%=h @product.title %>
</p>
<p>
  <strong>Description:</strong>
  <%=h @product.description %>
</p>
<p>
  <strong>Image Url:</strong>
  <%=h @product.picture.url %>
</p>
<p>
	<strong>Price:</strong>
	<%= number_to_currency(@product.price) %>
</p>

<p>
  <%= link_to "Edit", edit_product_path(@product) %> |
  <%= link_to "Destroy", @product, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", products_path %>
</p>

<p>
	<strong>Comments</strong><br>

<% (@product.comment.level+1).times do %>
	<%= '<ol>' * @product.comment.level %>
	<%= @product.comment.name %> : 	<%= @product.comment.comment_body %>
	<%= button_to "Answer", :controller => 'comments', :action => 'new' %><br>
<% end %>
</p>
