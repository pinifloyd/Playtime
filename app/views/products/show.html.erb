<% title "Product" %>

<p>
  <strong>Title:</strong>
  <%=h @product.title %>
</p>
<p>
  <strong>Description:</strong>
  <%=h @product.description %>
</p>
<p>
  <strong>Image Url:</strong>
  <%=h @product.picture.url %>
</p>
<p>
  <strong>Price:</strong>
  <%= number_to_currency(@product.price) %>
</p>

<p>
  <%= link_to "Edit", edit_product_path(@product) %> |
  <%= link_to "Destroy", @product, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", products_path %>
</p>


<div id="com">
  <% if @product.comments.any? %>
  <h1>Comments</h1>
  <ul>
    <%= render :partial => "comment", :locals => {:product => @product, :comments => @product.comments}, :collection => @product.comments.select{|c| c.root?} %>
  </ul>
	<% end %>
</div>

<div>
  <h1>New comment</h1>
<% form_remote_for [@product, @product.comments.new] do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label "text" %><br/>
    <%= f.text_area :comment_body, :rows => 5, :cols => 35 %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back' %>
</div>