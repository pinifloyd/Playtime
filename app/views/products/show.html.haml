%h1 Product
%p
  %strong Title:
  = "#{h @product.title }"
%p
  %strong Description:
  = "#{h @product.description }"
%p
  %strong Image Url:
  = "#{h @product.picture.url }"
%p
  %strong Price:
  = number_to_currency(@product.price)
%p
  = link_to "Edit", edit_product_path(@product)
  = " | "
  = link_to "Destroy", @product, :confirm => 'Are you sure?', :method => :delete
  = " | "
  = link_to "View All", products_path

= render :partial => 'comments/comment_list'

%div
  %h1 New comment
  - form_remote_for [@product, @product.comments.new] do |f|
    = f.error_messages
    %p
      = f.label :name
      %br
      = f.text_field :name
    %p
      = f.label "text"
      %br
      = f.text_area :comment_body, :rows => 5, :cols => 35
    %p
      = f.submit 'Create'
= link_to 'Back'