<% semantic_form_for @product do |f| %>
	<%= f.error_messages %>
  <% f.inputs do %>
		<%= f.input :title, :hint => "Must be unique!" %>
		<%= f.input :description %>
		<%= f.input :image_url, :hint => "*.gif/*.jpg/*.png" %>
		<%= f.input :price, :hint => "Should be at least 0.01" %>
	<% end %>
	<%= f.buttons %>
<% end %>
