%h1 Editing user
- form_for(@user) do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :hashed_password
    %br
    = f.text_field :hashed_password
  %p
    = f.label :salt
    %br
    = f.text_field :salt
  %p
    = f.submit 'Update'
= link_to 'Show', @user
= " | "
= link_to 'Back', users_path