.cart-title
  = "Your Cart"

%table
  = render(:partial => "cart_item", :collection => cart.items)
  %tr.total-line
    %td{:colspan => 2}
      = "Total"
    %td.total-cell
      = number_to_currency(cart.total_price)

= button_to "Checkout", :action => 'checkout'
- form_remote_tag :url => { :action => :empty_cart } do
  = submit_tag "Empty cart"