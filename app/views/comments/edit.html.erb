<h1>Editing comment</h1>

<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
	<p>
		<%= f.label "text" %><br>
		<%= f.text_area :comment_body, :rows => 5, :cols => 35 %>
  <p>
  <p>
    <%= f.label :parent_id %><br />
    <%= f.select :parent_id, nested_set_options(Comment, @comment) {|i| "#{'-' * i.level} #{i.name}" } %>
  </p>
  <p>
    <%= f.label :lft %><br />
    <%= f.text_field :lft %>
  </p>
  <p>
    <%= f.label :rgt %><br />
    <%= f.text_field :rgt %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @comment %> |
<%= link_to 'Back', comments_path %>
