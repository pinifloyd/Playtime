<h1>New comment</h1>
<% form_for [@product, @comment] do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label "text" %><br/>
    <%= f.text_area :comment_body, :rows => 5, :cols => 35 %>
  </p>
  <p>
    <%= f.label "product id" %><br/>
    <%= f.text_field :product_id %>
  </p>
  <p>
    <%#= f.label :parent_id %><br />
    <%#= f.hidden :parent_id %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back' %>
